<head>
  <title>Bottle Lives Matter</title>
  <link rel="icon" href="<%= asset_path('favicon/favicon.ico') %>" type="image/x-icon">
  <%= favicon_link_tag 'favicon/favicon.ico', :rel => 'shortcut icon' %>
  <%= favicon_link_tag 'favicon/apple-icon-180x180.png', :rel => 'apple-touch-icon', :type => 'image/png', :sizes => '180x180' %>
  <%= favicon_link_tag 'favicon/apple-icon-152x152.png', :rel => 'apple-touch-icon', :type => 'image/png', :sizes => '152x152' %>
  <%= favicon_link_tag 'favicon/apple-icon-144x144.png', :rel => 'apple-touch-icon', :type => 'image/png', :sizes => '144x144' %>
  <%= favicon_link_tag 'favicon/apple-icon-120x120.png', :rel => 'apple-touch-icon', :type => 'image/png', :sizes => '120x120' %>
  <%= favicon_link_tag 'favicon/apple-icon-114x114.png', :rel => 'apple-touch-icon', :type => 'image/png', :sizes => '114x114' %>
  <%= favicon_link_tag 'favicon/apple-icon-76x76.png', :rel => 'apple-touch-icon', :type => 'image/png', :sizes => '76x76' %>
  <%= favicon_link_tag 'favicon/apple-icon-72x72.png', :rel => 'apple-touch-icon', :type => 'image/png', :sizes => '72x72' %>
  <%= favicon_link_tag 'favicon/apple-icon-60x60.png', :rel => 'apple-touch-icon', :type => 'image/png', :sizes => '60x60' %>
  <%= favicon_link_tag 'favicon/apple-icon-57x57.png', :rel => 'apple-touch-icon', :type => 'image/png', :sizes => '57x57' %>
  
  <%= favicon_link_tag 'favicon/android-icon-144x144.png', :rel => 'icon', :type => 'image/png', :sizes => '144x144' %>
  <%= favicon_link_tag 'favicon/android-icon-192x192.png', :rel => 'icon', :type => 'image/png', :sizes => '192x192' %>
  <%= favicon_link_tag 'favicon/android-icon-36x36.png', :rel => 'icon', :type => 'image/png', :sizes => '36x36' %>
  <%= favicon_link_tag 'favicon/android-icon-48x48.png', :rel => 'icon', :type => 'image/png', :sizes => '48x48' %>
  <%= favicon_link_tag 'favicon/android-icon-72x72.png', :rel => 'icon', :type => 'image/png', :sizes => '72x72' %>
  <%= favicon_link_tag 'favicon/android-icon-96x96.png', :rel => 'icon', :type => 'image/png', :sizes => '96x96' %>

  <%= favicon_link_tag 'favicon/favicon-16x16.png', :rel => 'icon', :type => 'image/png', :sizes => '16x16' %>
  <%= favicon_link_tag 'favicon/favicon-32x32.png', :rel => 'icon', :type => 'image/png', :sizes => '32x32' %>
  <%= favicon_link_tag 'favicon/favicon-96x96.png', :rel => 'icon', :type => 'image/png', :sizes => '96x96' %>

  <meta name="msapplication-TileColor" content="#FFFFFF">
  <meta name="msapplication-TileImage" content="<%= asset_path('favicon/ms-icon-144x144.png') %>">
  <meta name="application-name" content="Bottle Lives Matter">

  <% [70,150,310].each do |size| %>
    <meta name="<%= "msapplication-square#{size}x#{size}logo"%>" content="<%= asset_path("favicon/ms-icon-#{size}x#{size}.png")%>" />
  <% end %>

  <meta name="msapplication-config" content="<%= asset_path('favicon/browserconfig.xml') %>">
  <meta property="og:title" content="Bottle Lives Matter"/>
  <meta property="og:description" content="Bottle Lives Matter"/>
  <meta property="og:image" content="<%= asset_path("bottle_lives_matter/logo.png") %>"/>
  <meta property="og:url" content="<%= root_url %>"/>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://fonts.googleapis.com/css?family=Palanquin:300,400,600,700" rel="stylesheet">
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= @bodyId %>">
<%= gflash %>
<%= yield %>


</body>
</html>
