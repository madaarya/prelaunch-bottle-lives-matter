<%
  referrals_count = @user.referrals.count
  twitter_message = "100% re-used bottled water company. Excited for launch."
  if referrals_count.zero?
    current_shared = "no friends have joined..Yet!"
  else
    current_shared = (referrals_count == 1 ? 'has 1 friend that has joined' : "has #{referrals_count} friends that has joined")
  end
%>

<div id="wrapper">
    <div class="thankyou">
      <div class="container-fluid">
        <div class="max-container">
          <div class="col-xs-12">
            <div class="row">
              <p>Thank you for signing up</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <main id="main">
      <div class="align-left">
        <div class="wrap-area">
          <div class="video-area">
            <strong class="title">Watch The Video</strong>
            <div class="video-holder">
              <a href="#">
                <span class="btn-play">Play</span>
                <%= image_tag "bottle_lives_matter/img-01.jpg", alt: "video description" %>
              </a>
            </div>
          </div>
          <div class="text-holder">
            <div class="text-frame">
              <strong class="title">How It Works</strong>
              <p>Top 2 users with most people referred using our Bottle Lives Matter branded sharable social media links to the prelaunch site get a year free supply of bottled water.</p>
              <div class="mobileOnly">
                <div class="img-holder img1">
                  <%= image_tag "bottle_lives_matter/img-02.png", alt: "image description" %>
                </div>
              </div>
              <span class="ship">We ship to the U.S. (&amp; Canada Soon)</span>
              <span class="privacy"><a href="#">Privacy Policy</a></span>
            </div>
            <div class="img-holder img1">
              <%= image_tag "bottle_lives_matter/img-02.png", alt: "image description" %>
            </div>
            <div class="mob">
              <div class="txt">
                <strong class="title">Don’t leave your friends behind</strong>
                <strong class="sub-title">INVITE FRIENDS <span>&amp; Earn Product</span></strong>
                <p>Share your unique link via email, Facebook or Twitter and earn Bottle Lives Matter goods for each friend who signs up.</p> 
              </div>
              <div class="mobileOnly1">
                <div class="txt">
                  <div class="link2" href="<%= root_url %>?ref=<%= @user.referral_code %>" target="_blank">
                    <%= root_url %>?ref=<%= @user.referral_code %>
                  </div>
                    <ul class="share">
                      <li>Share on:</li>
                      <li>
                        <ul>
                          <li><a href="http://www.facebook.com/sharer/sharer.php?u=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@user.referral_code) %>&title=BottleLivesMatter" target="_blank"><%= image_tag "bottle_lives_matter/ico-facebook.png", alt: "facebook" %></a></li>
                          <li>OR</li>
                          <li><a href="http://twitter.com/share?url=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@user.referral_code) %>&text=<%= CGI::escape(twitter_message) %>" target="_blank"><%= image_tag "bottle_lives_matter/ico-twitter.png", alt: "twitter" %></a></li>
                        </ul>
                      </li>
                    </ul>
                  </div>
                </div>
            </div>
          </div>
        </div>
      </div>
      <div class="align-right">
        <div class="frame">
          <div class="txt">
            <strong class="title">Don’t leave your friends behind</strong>
            <strong class="sub-title">INVITE FRIENDS <span>&amp; Earn Product</span></strong>
            <p>Share your unique link via email, Facebook or Twitter and earn Bottle Lives Matter goods for each friend who signs up.</p>
            <div class="link" href="<%= root_url %>?ref=<%= @user.referral_code %>" target="_blank">
              <%= root_url %>?ref=<%= @user.referral_code %>
            </div>
            <ul class="share">
              <li>Share on:</li>
              <li>
                <ul>
                  <li><a href="http://www.facebook.com/sharer/sharer.php?u=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@user.referral_code) %>&title=BottleLivesMatter" target="_blank"><%= image_tag "bottle_lives_matter/ico-facebook.png", alt: "facebook" %></a></li>
                  <li>OR</li>
                  <li><a href="http://twitter.com/share?url=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@user.referral_code) %>&text=<%= CGI::escape(twitter_message) %>" target="_blank"><%= image_tag "bottle_lives_matter/ico-twitter.png", alt: "twitter" %></a></li>
                </ul>
              </li>
            </ul>
          </div>
          <div class="stats-area statsmargin">
            <strong class="title">My Stats</strong>
            <div class="stats-holder">
              <div class="stats-box">
                <strong>Total Friends Joined</strong>
                <ul>
                  <li><i><%= image_tag "bottle_lives_matter/ico-user.png", alt: "friend shared count" %></i> <span><%= referrals_count %></span></li>
                </ul>
              </div>
            </div>
            <p>Current Top user <%= current_shared %> - share to more friends to become the Top user.</p>
          </div>
        </div>
      </div>
    </main>
  </div>